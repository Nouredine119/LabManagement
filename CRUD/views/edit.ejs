<!-- edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Edit User</h1>
        <form action="/<%= user._id %>/edit" method="post" class="mt-3">
            <div class="form-group">
                <input name="firstName" type="text" class="form-control" value="<%= user.firstName %>" placeholder="First Name">
            </div>
            <div class="form-group">
                <input name="lastName" type="text" class="form-control" value="<%= user.lastName %>" placeholder="Last Name">
            </div>
            <div class="form-group">
                <input name="profession" type="text" class="form-control" value="<%= user.profession %>" placeholder="Profession">
            </div>
            <div class="form-group">
                <input name="age" type="number" class="form-control" value="<%= user.age %>" placeholder="Age">
            </div>
            <div class="form-group">
                <input name="affiliation" type="text" class="form-control" value="<%= user.affiliation %>" placeholder="affiliation">
            </div>
            <div class="form-group">
                <input name="type" type="text" class="form-control" value="<%= user.type %>" placeholder="type">
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</body>
</html>
